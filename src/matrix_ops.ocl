__kernel void vector_dot_f32(__global const float *a,
                                  __global const float *b,
                                  __global float *c,
                                  const ulong wa,
                                  const ulong wb) {
	ulong i = get_global_id(0);
	ulong j = get_global_id(1);

    float value = 0.0;
    for (ulong k = 0; k < wa; k++) {
        float e_a = a[i*wa + k]; // Element a
        float e_b = b[k*wb + j]; // Element a
        value += e_a*e_b;
    }
	c[i*wb + j] = value;
}

