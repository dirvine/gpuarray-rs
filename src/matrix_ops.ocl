////////////////////////////////////////////////////////////////////////////////////////////////////
// derivative of max with respect to a

__kernel void vector_dmax_f32(__global float *a,
                              __global float *b,
                              const float threshold) {
	uintptr_t i = get_global_id(0);
    if (a[i] > threshold) {
        b[i] = 1;
    } else {
        b[i] = 0;
    }
}

